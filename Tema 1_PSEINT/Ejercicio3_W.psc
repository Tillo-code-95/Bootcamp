	Definir A Como Entero;
	
	Leer A;
	
	Si A > 0 Entonces
		Escribir " A es un numero positivo";
	SiNo 
		Escribir " A es 0 o negativo";
		
		si A < 0 Entonces
			Escribir " A es numero negativo ";
		SiNo 
			Escribir " A es numero positivo o= a 0";
			
			si A == 0 Entonces
				Escribir " El numero es nulo ";
			SiNo 
				Escribir " A es positivo o negativo";
			FinSi
		FinSi
	FinSi
	
